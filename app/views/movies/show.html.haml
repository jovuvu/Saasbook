-# Find me in app/views/movies/show.html.haml

%h2 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")
%h3 Description:
%p#description= @movie.description

= link_to 'Edit info', edit_movie_path(@movie)
-# This Delete link will not really be a link, but a form:
= button_to 'Delete', movie_path(@movie), :method => :delete, data: { confirm: 'Are you sure?', disable_with: 'loading...' }
= link_to 'Back to movie list', movies_path
